<header class="header_pg">
    <nav class="navbar ">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/" title="PixlJobs Home Page">
                    <img src="/img/logo-normal.png" alt="PixlJobs Logo">
                </a>
            </div>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="nav navbar-nav navbar-right">
                    {{#if user}}
                        <li class="dropdown user_link_wrap">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                {{#if user.photo}}
                                    <img src="/api/applicant/photo/{{user.photo}}" class="user_img">
                                {{else}}
                                    <img src="/img/user_icon.svg" class="user_img">
                                {{/if}}
                                <span class="caret"></span>
                                <div class="notification_link">
                                    <a href="/notifications" class="cta_link">
                                        {{#if user.total_notifications}}
                                            <span class="badge notification_head_count">{{user.total_notifications}}</span>
                                        {{/if}}
                                    </a>
                                </div>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/">Jobs</a></li>
                                <li><a href="/logout" title="PixlJobs Login Page">Log out</a></li>
                            </ul>
                        </li>
                    {{else}}
                        <li><a href="/login" title="PixlJobs Login Page">Log in</a></li>
                    {{/if}}
                </ul>
            </div>
        </div>
    </nav>
</header>