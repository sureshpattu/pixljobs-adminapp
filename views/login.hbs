<!DOCTYPE html>
<html lang="en">
<head>
    <title>Pixlcoders</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Muli:300,300i,400,400i,600,600i,700,700i" rel="stylesheet">
    {{>header_assets}}
</head>
<body class="login_pg signup_pg">
{{>header}}
<section class="common_main_sec">
    {{>common_hero_sec}}
    <div class="cont_sec">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="login_form_sec">
                        <div class="signup_wrap">
                            <form class="" id="jsLoginForm">
                                <div class="form-group pixl_form_group">
                                    <label class="control-label">Email</label>
                                    <div class="box_sec">
                                        <input type="email" class="form-control required js_email"
                                               placeholder="Your email address">
                                    </div>
                                </div>
                                <div class="form-group pixl_form_group">
                                    <label class="control-label">Password</label>
                                    <div class="box_sec">
                                        <input type="password" class="form-control required js_password"
                                               placeholder="Enter password">
                                    </div>
                                </div>
                                <!--<a href="/forgot-password" class="cta_link">forgot password</a>-->
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <button type="submit" class="btn btn_big btn_blue">LOGIN</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer_assets}}
{{>footer}}
</body>
<script type="application/javascript">
    $(function() {
        LoginHandler.init();
    });
</script>
</html>
